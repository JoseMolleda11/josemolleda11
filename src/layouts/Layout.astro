---
const imageSrc = "/profile.jpg";
import Sidebar from "../components/Sidebar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/Logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Jose Molleda</title>
	</head>
	<body>
		<aside>
			<slot name="jl"/>
			<br><br><br>
			<img src={imageSrc} alt="Profile Picture" class="profile-image" />
			<div class="sidebar-container">
				<Sidebar />
			</div>
		</aside>
		<main>
			<slot name="mr"/>
		</main>
	</body>
</html>

<style>

	html,
	body {
		display: flex;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	aside {
		width: 20%;
		height: 100vh;
		display: flex;
		background-color: rgb(72, 98, 133);
		flex-direction: column; /* Stack elements vertically */
	}

	main {
		width: 75%;
		height: 100vh;
		background-color: rgb(254, 238, 238);
		display: flex;
	}

 	.profile-image {
		width: 150px; /* Ajusta el tamaño según necesites */
		height: 150px;
		border-radius: 50%; /* Hace la imagen circular */
		object-fit: cover;
		transition: transform 0.2s ease-in-out;
		display: block;
		margin: 0 auto;
  	}

	.profile-image:hover {
		transform: scale(1.05); /* Hace que la imagen crezca al acercar el cursor */
	}

	/* Sidebar container */
	.sidebar-container {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center; /* Center links */
		margin-top: 10px;
	}

</style>
