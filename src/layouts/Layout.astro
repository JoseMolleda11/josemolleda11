---
const imageSrc = "/profile.jpg";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/public/Logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Jose Molleda</title>
	</head>
	<body>
		<aside>
			<slot name="jl"/>
			<img src={imageSrc} alt="Profile Picture" class="profile-image" />
		</aside>
		<main>
			<slot name="mr"/>
		</main>
	</body>
</html>

<style>

	html,
	body {
		display: flex;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	aside {
		width: 25%;
		height: 100vh;
		display: flex;
		background-color: rgb(72, 98, 133);
	}

	main {
		width: 75%;
		height: 100vh;
		background-color: white;
		display: flex;
	}

 	.profile-image {
		padding: 70px;
		width: 150px; /* Ajusta el tamaño según necesites */
		height: 150px;
		border-radius: 50%; /* Hace la imagen circular */
		object-fit: cover;
		transition: transform 0.2s ease-in-out;
		display: block;
		margin: 0 auto;
  	}

	.profile-image:hover {
		transform: scale(1.05); /* Hace que la imagen crezca al acercar el cursor */
	}	
</style>
